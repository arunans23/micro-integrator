<?xml version="1.0" encoding="UTF-8"?>
<sequence name="parallel_scatter_gather_seq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <scatter-gather parallel-execution="true" result-target="Body" content-type="JSON">
        <aggregation expression="${payload}"/>
        <sequence>
            <payloadFactory media-type="json" template-type="default">
                <format>{
                    "pet": {
                    "name": "pet1",
                    "type": "dog",
                    "requestId": ${payload.requestId}
                    }
                    }</format>
            </payloadFactory>
        </sequence>
        <sequence>
            <payloadFactory media-type="json" template-type="default">
                <format>{
                    "pet": {
                    "name": "pet2",
                    "type": "cat",
                    "requestId": ${payload.requestId}
                    }
                    }</format>
            </payloadFactory>
        </sequence>
    </scatter-gather>
</sequence>
